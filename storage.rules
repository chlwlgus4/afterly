rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper function: Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function: Check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function: Check if file is an image
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }

    // Helper function: Check file size (max 10MB)
    function isValidSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }

    // User images: users/{userId}/{folder}/{fileName}
    match /users/{userId}/{folder}/{fileName} {
      // Allow read if authenticated user owns the file
      allow read: if isOwner(userId);

      // Allow write (create/update) if:
      // - User is authenticated and owns the folder
      // - File is an image
      // - File size is valid
      allow write: if isOwner(userId) && isImage() && isValidSize();

      // Allow delete if user owns the file
      allow delete: if isOwner(userId);
    }

    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
